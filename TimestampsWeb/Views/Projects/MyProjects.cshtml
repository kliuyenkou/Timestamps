@model IEnumerable<TimestampsWeb.ViewModels.ProjectViewModel>

@{
    ViewBag.Title = "Projects";
}

<h2>My projects</h2>
@Html.ActionLink("Create project", "Create", null, new {@class = "btn btn-primary pull-right align-bottom" })

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>
    <tbody class="myprojects">
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                    @if (item.IsArchived) {
                        <span class="label label-warning">Archived</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Projects", new {id=item.Id})" class="">Edit</a>
                </td>
            </tr>
        }
    </tbody>

</table>

